{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false,
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "npm": false,
  "hooks": {
    "after:bump": "echo 更新版本成功"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "options": {
    "increment": "interactive", 
    "defaultBump": false       
  }
}